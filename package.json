{
  "name": "flexdoc",
  "version": "1.9.0",
  "description": "A flexible, lightweight npm library for converting HTML to PDF, PPTX, and DOCX formats with 25+ professional themes, automatic chart generation, and ML-based layout detection. Enterprise-ready with zero paid dependencies. Includes REST API server, cloud storage integration (S3, Azure, Google Drive), and Pro tier licensing.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "flexdoc": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "serve": "node dist/api/cli.js",
    "serve:dev": "tsc && node dist/api/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "example": "node examples/basic-usage.js",
    "example:pdf": "node examples/pdf-example.js",
    "example:pptx": "node examples/pptx-example.js",
    "example:docx": "node examples/docx-example.js",
    "example:advanced": "node examples/advanced-usage.js",
    "example:professional": "node examples/professional-pptx.js",
    "example:charts": "node examples/charts-example.js",
    "example:themes": "node examples/themes-example.js",
    "example:licensing": "node examples/licensing-example.js",
    "license:generate": "node scripts/generate-test-license.js",
    "webhook:server": "node dist/payment/webhook-server.js",
    "webhook:dev": "tsc && node dist/payment/webhook-server.js",
    "docker:build": "docker build -t flexdoc-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "html",
    "pdf",
    "pptx",
    "docx",
    "word",
    "powerpoint",
    "converter",
    "html-to-pdf",
    "html-to-pptx",
    "html-to-docx",
    "html-to-word",
    "document-conversion",
    "puppeteer",
    "enterprise",
    "flexdoc",
    "document",
    "export",
    "cli",
    "command-line",
    "batch-conversion",
    "charts",
    "auto-charts",
    "data-visualization",
    "table-to-chart",
    "themes",
    "theming",
    "branding",
    "customization",
    "design-system",
    "rest-api",
    "api-server",
    "microservice",
    "express",
    "docker",
    "swagger",
    "openapi",
    "cloud-storage",
    "s3",
    "aws",
    "azure",
    "google-drive",
    "cloud-integration",
    "machine-learning",
    "ml",
    "ai",
    "layout-detection",
    "content-analysis",
    "intelligent-layout",
    "smart-grouping",
    "content-scoring"
  ],
  "author": "Rakesh Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakeshwfg/flexdoc.git"
  },
  "bugs": {
    "url": "https://github.com/rakeshwfg/flexdoc/issues"
  },
  "homepage": "https://github.com/rakeshwfg/flexdoc#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/lib-storage": "^3.901.0",
    "@azure/storage-blob": "^12.28.0",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "googleapis": "^161.0.0",
    "helmet": "^8.1.0",
    "html-to-text": "^9.0.5",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pptxgenjs": "^4.0.1",
    "puppeteer": "^24.23.0",
    "sharp": "^0.34.4",
    "stripe": "^19.1.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "bin"
  ]
}
