# FlexDoc Environment Configuration

# License Settings
FLEXDOC_LICENSE_KEY=your-pro-license-key-here

# Stripe Configuration (for webhook server)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# License Generation
LICENSE_PRIVATE_KEY_PATH=./keys/license_key

# Email Configuration (choose one provider)
EMAIL_PROVIDER=console  # Options: sendgrid, resend, smtp, console
EMAIL_FROM=licenses@flexdoc.dev
EMAIL_FROM_NAME=FlexDoc

# SendGrid (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Resend (if using Resend)
RESEND_API_KEY=your_resend_api_key

# SMTP (if using SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Database Configuration (optional for webhook server)
DATABASE_PROVIDER=firebase  # Options: firebase, supabase, mongodb, postgres

# Firebase (if using Firebase)
FIREBASE_PROJECT_ID=your_firebase_project
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Supabase (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# MongoDB (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/flexdoc

# PostgreSQL (if using PostgreSQL)
POSTGRES_CONNECTION_STRING=postgresql://user:pass@localhost:5432/flexdoc

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Analytics
ENABLE_TELEMETRY=true
